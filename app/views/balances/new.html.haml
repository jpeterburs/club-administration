.container
  = form_for :balance, url: balances_result_path do |f|
    .mb-3
      = f.label :start_date, class: 'form-label'
      = f.text_field :start_date, type: :date, class: 'form-control'

    .mb-3
      = f.label :end_date, class: 'form-label'
      = f.text_field :end_date, type: :date, class: 'form-control'

    = f.submit t('.generate_balance'), class: 'btn btn-primary'
