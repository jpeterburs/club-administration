.container
  = page_title 'Balance'
  = form_for :balance, url: generate_balances_path do |f|
    .mb-3
      = f.label :start_date, class: 'form-label'
      = f.text_field :start_date, type: :date, class: 'form-control', value: Date.today.beginning_of_year

    .mb-3
      = f.label :end_date, class: 'form-label'
      = f.text_field :end_date, type: :date, class: 'form-control', value: Date.today

    = f.submit t('.generate_balance'), class: 'btn btn-primary'

  #result
