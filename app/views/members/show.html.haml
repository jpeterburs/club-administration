= page_title @member.to_s

%nav
  %ol.breadcrumb
    %li.breadcrumb-item
      = link_to Member.model_name.human(count: 2), members_path
    %li.breadcrumb-item.active
      = @member.id

.row
  %dt.col-sm-3= Member.human_attribute_name :email
  %dd.col-sm-9= mail_to @member.email

  %dt.col-sm-3= Member.human_attribute_name :date_of_birth
  %dd.col-sm-9= l(@member.date_of_birth)

  %dt.col-sm-3= Member.human_attribute_name :occupation
  %dd.col-sm-9= @member.occupation
